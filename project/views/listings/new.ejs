    <div class="container">
        <h2>Create a New Task</h2>
        <form method="POST" action="/listings">
            <input name="listing[title]" placeholder="enter title" type="text" required />
            <br /><br />
            <textarea name="listing[description]" placeholder="enter description" required></textarea>
            <br /><br />
            <p>Start Day of Task</p>
            <input name="listing[startDate]" placeholder="enter start date" type="date" required />
            <br /><br />
            <p>End Day of Task</p>
            <input name="listing[endDate]" placeholder="enter end date" type="date" required />
            <br /><br />
            <input name="listing[time]" placeholder="enter time" type="time" required />
            <br /><br />
            <input name="listing[tags]" placeholder="enter tags" type="text" required />
            <br /><br />
            <label for="reminder">Reminder</label><br/>
            <select name="listing[reminder]" id="reminder" required>
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>

            <br /><br />
            <button class="btn">Add</button>
            <a href="/listings">
                <button class="btn" type="button">Back</button>
            </a>
