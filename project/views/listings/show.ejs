<!-- <!DOCTYPE html> -->
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/todo.css">
  <link rel="stylesheet" href="../sidebar.css">
  <link rel="stylesheet" href="https://unicons.iconscout.com/release-pro/v4.0.0/css/line.css">
  <title>Show Task</title>
</head>

<body>
  <!-- Siderbar begins -->
  <nav>
    <div class="sidebar">

      <div class="menu">
        <ul class="links">
          <li>
            <i class="uil uil-angle-left sidebar-toggle"></i>
            <!-- Insert logo here  -->
            <span class="items"></span>
          </li>

          <li>
            <a href="../dashboard.html">
              <i class="uil uil-apps"></i>
              <span class="items">Dashboard</span>
            </a>
          </li>

          <li class="activeitem">
            <a href="/listings">
              <i class="uil uil-file-check-alt"></i>
              <span class="items">Todo</span>
            </a>
          </li>

          <li>
            <a href="/calendar">
              <i class="uil uil-calendar-alt"></i>
              <span class="items">Calendar</span>
            </a>
          </li>

          <li>
            <a href="../../notes/Notes.html">
              <i class="uil uil-notes"></i>
              <span class="items">Notes</span>
            </a>
          </li>


          <li class="items">
            <a href="../grades.html">
              <i class="uil uil-graduation-cap"></i>

              <span class="items">Grades</span>
            </a>
          </li>
          <!-- Replace class name with "items" in main homescreen-->
          <li class="dropd items">
            <a href="#">
              <i class="uil uil-map"></i>

              <span class="items">Map</span>
              <i class="uil uil-angle-down"></i>
            </a>
            <div class="drop">
              <a href="../maps.html">Map</a>
              <a href="../floorplans.html">Floor Plans</a>
            </div>
          </li>


        </ul>

        <ul class="logout">
          <li>
            <a href="/">
              <i class="uil uil-signout"></i>
              <span class="items">Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container2">
    <h2>Task Details</h2>
    <ul>
      <li class="title">
        <%= listing.title %>
      </li>
      <li> Description -
        <%= listing.description %>
      </li>
      <li>Start Date - <%= listing.startDate.toLocaleDateString('en-US', {timeZone: 'UTC'}) %>
      </li>
      </li>
      <li>End Date - <%= listing.endDate.toLocaleDateString('en-US', {timeZone: 'UTC'}) %>
      </li>
      <li> Time -
        <%= listing.time.toLocaleString() %>
      </li>
      <li> Tag -
        <%= listing.tags %>
      </li>
      <li> Reminder -
        <%= listing.reminder %>
      </li>
    </ul>
    <br />
    <a href="/listings/<%= listing._id %>/edit">
      <button class="btn" type="button">Edit</button>
    </a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn">Delete Task</button>
      <a href="/listings">
        <button class="btn" type="button">Back</button>
      </a>
    </form>
    <!-- <br> -->
    <!-- <a href="/listings">Back to all Tasks Page!</a> -->
  </div>
</body>

</html>